<UserControl x:Class="DigitalPhotographyManagementSystem.UserControls.AdminOnly.ListAccounts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigitalPhotographyManagementSystem.UserControls.AdminOnly"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             FontFamily="/DigitalPhotographyManagementSystem;component/Fonts/#Nunito"
              
             Height="663" Width="1104"
             Background="White" >
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="30,10,0,0" 
                   FontFamily="/DigitalPhotographyManagementSystem;component/Fonts/#Nunito" 
                   FontWeight="Bold"
                   FontSize="30"
                       >List of Accounts</Label>

            <Border Margin="30,5,30,0"
                    CornerRadius="10" 
                    Background="#8699DA"
                    Height="560">
                <Border Margin="5" 
                        CornerRadius="10" 
                        Background="White">
                    <ListView>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="No." Width="85" DisplayMemberBinding="{Binding No}" ></GridViewColumn>
                                <GridViewColumn Header="Name" Width="290" DisplayMemberBinding="{Binding staffName}" ></GridViewColumn>
                                <GridViewColumn Header="Username" Width="200" DisplayMemberBinding="{Binding username}" ></GridViewColumn>
                                <GridViewColumn Header="Password" Width="200" DisplayMemberBinding="{Binding password}" ></GridViewColumn>
                                <GridViewColumn Header="Department" Width="230" DisplayMemberBinding="{Binding department}" ></GridViewColumn>
                                
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
